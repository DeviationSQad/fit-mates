<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:contentPadding="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/darkerGray"
    app:cardCornerRadius="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_event_title_text_view"
            android:text="Event name"
            android:fontFamily="sans-serif-light"
            android:textSize="48sp"
            android:textAlignment="center"
            android:layout_margin="16dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkerGray"
            android:layout_margin="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_event_place_name_text_view"
            android:text="Event place"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkerGray"
            android:layout_margin="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/card_event_city_text_view"
                android:layout_weight="1"
                android:text="Event city"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/card_event_date_text_view"
                android:layout_weight="1"
                android:text="Event date"
                android:textSize="24sp"
                android:textAlignment="center"/>

        </LinearLayout>
    </LinearLayout>
</android.support.design.card.MaterialCardView>